{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "types": ["node", "jest", "@testing-library/jest-dom", "@testing-library/react"],
   "baseUrl": ".",
   "paths": {
     "@/*": ["src/*"]
   },
    "jsx": "react-jsx",
    "module": "es2020",
    "target": "es2020",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
  },
  "include": [
    "src", "tests"
  ]
}